<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.uet.library_management.ui.admin.AdminMenuController"
      styleClass="left-sider">
    <VBox styleClass="menu-pane">
        <!--        Sách-->
        <Label styleClass="menu-label" text="Sách" />
        <Button fx:id="homeButton" styleClass="menu-button" onAction="#handleHomeMenu" text="Dashboard">
            <graphic>
                <ImageView fx:id="homeImageView" fitHeight="16" fitWidth="16">
                    <Image url="@../../icons/home.png" />
                </ImageView>
            </graphic>
        </Button>

        <!--        Thư viện-->
        <Label styleClass="menu-label" text="Thư viện" />
        <Button fx:id="userButton" styleClass="menu-button" onAction="#handleUserMenu" text="UserPage">
            <graphic>
                <ImageView fx:id="userImageView" fitHeight="16" fitWidth="16">
                    <Image url="@../../icons/books.png" />
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="loanButton" styleClass="menu-button" onAction="#handleLoanMenu" text="LoanPage">
            <graphic>
                <ImageView fx:id="loanImageView" fitHeight="16" fitWidth="16">
                    <Image url="@../../icons/upload.png" />
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="editButton" styleClass="menu-button" onAction="#handleEditMenu" text="Sửa sách">
            <graphic>
                <ImageView fx:id="editImageView" fitHeight="16" fitWidth="16">
                    <Image url="@../../icons/edit.png" />
                </ImageView>
            </graphic>
        </Button>
    </VBox>

    <Button fx:id="usernameButton" styleClass="username-button" text="Admin">
        <graphic>
            <ImageView fx:id="usernameImageView" fitHeight="40" fitWidth="40">
                <Image url="@../../icons/avatar-female.png" />
            </ImageView>
        </graphic>
    </Button>
</VBox>
