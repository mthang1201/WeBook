<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uet.library_management.ui.admin.forms.UserFormController"
            styleClass="content-pane">
    <top>
        <VBox styleClass="admin-head">
            <Label styleClass="head-label" text="UserForm" />
            <Separator styleClass="separator" />
        </VBox>
    </top>
    <center>
        <VBox styleClass="vbox-padding">
            <GridPane hgap="10">
                <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" styleClass="admin-text-field" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Label text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="phoneNumberField" styleClass="admin-text-field" GridPane.columnIndex="0" GridPane.rowIndex="3" />

                <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="emailField" styleClass="admin-text-field" GridPane.columnIndex="0" GridPane.rowIndex="5" />

                <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="addressField" styleClass="admin-text-field" GridPane.columnIndex="0" GridPane.rowIndex="7" />

                <Label text="Membership Status" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <TextField fx:id="membershipStatusField" styleClass="admin-text-field" GridPane.columnIndex="0" GridPane.rowIndex="9" />

                <Label text="Privileges" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                <TextField fx:id="privilegesField" styleClass="admin-text-field" GridPane.columnIndex="0" GridPane.rowIndex="11" />

                <Label fx:id="errorWarning" textFill="RED" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                <columnConstraints>
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
            <Button onAction="#returnToEdit" styleClass="cancel-button" text="Cancel" />
            <Button onAction="#handleSaveForm" styleClass="save-button" text="Save" />
        </VBox>
    </center>
</BorderPane>
