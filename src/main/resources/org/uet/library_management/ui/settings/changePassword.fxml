<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.uet.library_management.ui.settings.ChangePasswordController"
      styleClass="changes-vbox">
    <Button onAction="#handleBackButton" styleClass="settings-button" text="Back" />

    <Pane styleClass="spacing-pane" />

    <Label text="Change password" />
    <Label text="Your password must be at least 6 characters and should include a combination of numbers,
    letters and special characters (!$@%)." style="-fx-font-size: 12px; -fx-text-fill: gray" />

    <Pane styleClass="spacing-pane" />

    <PasswordField promptText="Current password" />
    <Pane styleClass="spacing-pane" />
    <PasswordField fx:id="newPasswordField" promptText="New password" />
    <Pane styleClass="spacing-pane" />
    <PasswordField promptText="Retype new password" />
    <Pane styleClass="spacing-pane" />

    <Button styleClass="changes-button" onAction="#handleChangePasswordButton" text="Change Password" />
</VBox>
