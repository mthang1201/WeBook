<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.uet.library_management.ui.SettingsController"
      styleClass="settings-window">
    <HBox styleClass="user-section" spacing="10">
        <ImageView fx:id="avatar" fitHeight="40" fitWidth="40">
            <Image url="@../icons/avatar-male.png" />
        </ImageView>
        <VBox>
            <Label fx:id="userName" styleClass="username-label" />
            <Label fx:id="userEmail" styleClass="email-label"/>
        </VBox>
    </HBox>

    <Pane styleClass="spacing-pane" />

    <!--        Sách-->
    <Label styleClass="settings-label" text="My purchases" />
    <Button fx:id="homeButton" styleClass="settings-button" text="Updates">
        <graphic>
            <ImageView fx:id="homeImageView" fitHeight="16" fitWidth="16">
                <Image url="@../icons/home.png" />
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="getAllButton" styleClass="settings-button" text="Books">
        <graphic>
            <ImageView fx:id="getAllImageView" fitHeight="16" fitWidth="16">
                <Image url="@../icons/getAll.png" />
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="bookmarkButton" styleClass="settings-button" text="Muốn đọc">
        <graphic>
            <ImageView fx:id="bookmarkImageView" fitHeight="16" fitWidth="16">
                <Image url="@../icons/bookmark.png" />
            </ImageView>
        </graphic>
    </Button>

    <Pane styleClass="spacing-pane" />
<!--        -->
    <Button fx:id="notificationsButton" styleClass="settings-button" text="Thông báo" />

    <Pane styleClass="spacing-pane" />
<!--        -->
    <Button fx:id="jhjh" styleClass="settings-button" text="Manage Hidden Purchases" />
    <Label fx:id="noteLabel" styleClass="note-label" text="Unhide books you have hidden." />

    <Pane styleClass="spacing-pane" />

    <Button fx:id="accountSettingsButton" onAction="#handleAccountSettings" styleClass="settings-button" text="Account Settings" />

    <Pane styleClass="spacing-pane" />

    <Button fx:id="signOutButton" onAction="#handleSignOut" styleClass="settings-button" text="Sign Out" />
</VBox>
